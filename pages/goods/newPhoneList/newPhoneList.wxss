/* pages/goods/newPhoneList.wxss */
.goods-con{
  background: #eee;
  min-height: 100vh;
}
.filter-box{
  position: relative;
  display: flex;
  justify-content: space-around;
  background: #fff;
}
.filter-box>view{
  flex-grow: 1;
  text-align: center;
  width: 100rpx;
  padding: 30rpx 0;
  border-right: 2rpx solid #ddd;
}
.filter-box>view:last-child{
  border-right: none;
}
.activeView{
  border-bottom: 8rpx solid #f00;
}
.goods{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 40rpx;
}
.goods-item{
  background: #fff;
  width: 320rpx;
  border-radius: 5px;
  overflow: hidden;
  margin-bottom: 30rpx;
}
image{
  width: 320rpx;
  height: 320rpx;
}
.text-box{
  font-size: 12px;
  padding: 20rpx;

}
.text-title{
  min-height: 32px;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.text-price{
  margin-top: 20rpx;
  font-size: 16px;
  color: #efa639
}