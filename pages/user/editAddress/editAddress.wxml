<!--pages/user/editAddress/editAddress.wxml-->
<view class='edit-box'>
  <form bindsubmit='handleSubmit'>
    <view class='form-item'>
      <input value='{{defaultData.name}}' name='name'></input>
    </view>
    <view class='form-item'>
      <input value='{{defaultData.phone}}' name='phone'></input>
    </view>
    <view class='form-item'>
      <textarea value='{{defaultData.address}}' name='address'></textarea>
    </view>
    <view class='form-btn'>
      <button>删除</button>
      <button type='primary' form-type='submit'>保存</button>
    </view>
  </form>
</view>