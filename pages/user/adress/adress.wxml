<!--pages/user/adress/adress.wxml-->
<view class='address'>
  <view class='address-box' wx:key='{{index}}' wx:for='{{addressList}}' wx:for-key='key'>
    <view class='address-icon'>
      <text class='iconfont icon-coordinates_fill'></text>
    </view>
    <view class='address-msg'>
      <view>
        <text class='address-name'>{{item.name}}</text>
        <text class='address-phone'>{{item.phone}}</text>
      </view>
      <view class='address-pos'>{{item.pos}}</view>
    </view>
    <view class='address-play' data-name='{{item.name}}' data-phone='{{item.phone}}' data-address='{{item.pos}}' bindtap='toPage'>
      <text class='iconfont icon-editor'></text>
    </view>
  </view>
</view>
